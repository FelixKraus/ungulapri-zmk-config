/*
 * Custom Split Keyboard (based on Temper)
 * Board: nRF52840 SuperMini (AliExpress, compatible with Nice!Nano v2)
 *
 * SPDX-License-Identifier: MIT
 */

#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zephyr,display = &oled;
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    // ─────────────────────────────
    // Matrix Transform
    // ─────────────────────────────
    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        rows = <4>;
        columns = <5>;

        // Map layout: row0-3, col0-4
        // Passe die Reihenfolge hier an dein Layout an (z. B. für Split-Left oder Split-Right)
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)
                        RC(3,2) RC(3,3) RC(3,4)
        >;
    };

    // ─────────────────────────────
    // Key Scan Matrix (GPIOs)
    // ─────────────────────────────
    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";

        // Dein Board ist col2row verdrahtet
        diode-direction = "col2row";

        // Reihen-Pins (row0 → row3)
        // P0.22 = row0, P0.24 = row1, P1.00 = row2, P0.11 = row3
        row-gpios = <
            &pro_micro 0 22 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)
            &pro_micro 0 24 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)
            &pro_micro 1 00 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)
            &pro_micro 0 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)
        >;

        // Spalten-Pins (col0 → col4)
        // P0.29 = col0, P0.02 = col1, P1.15 = col2, P1.13 = col3, P1.11 = col4
        col-gpios = <
            &pro_micro 0 29 GPIO_ACTIVE_HIGH
            &pro_micro 0 02 GPIO_ACTIVE_HIGH
            &pro_micro 1 15 GPIO_ACTIVE_HIGH
            &pro_micro 1 13 GPIO_ACTIVE_HIGH
            &pro_micro 1 11 GPIO_ACTIVE_HIGH
        >;
    };

    // ─────────────────────────────
    // OLED Display (falls vorhanden)
    // ─────────────────────────────
    &pro_micro_i2c {
        status = "okay";

        oled: ssd1306@3c {
            compatible = "solomon,ssd1306fb";
            reg = <0x3c>;
            label = "DISPLAY";
            width = <128>;
            height = <32>;
            segment-offset = <0>;
            page-offset = <0>;
            display-offset = <0>;
            multiplex-ratio = <31>;
            segment-remap;
            com-invdir;
            com-sequential;
            prechargep = <0x22>;
        };
    };
};
